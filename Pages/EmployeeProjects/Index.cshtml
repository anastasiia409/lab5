@page
@model lab5.Pages.EmployeeProjects.IndexModel

<h1>Tickets</h1>
@{
    if(TempData["success"] != null)
    {
        <h1>@TempData["success"]</h1>
    }
}
<a asp-page="Create" class="btn btn-primary">Add new employee's project'</a>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Id eproject
            </th>
            <th>
                Employee's Name
            </th>
            <th>
                Name of project
            </th>
            <th>
                Name of position
            </th>
            <th>
                Date of join
            </th>
            
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var eproject in Model._eprojects)
        {
            <tr>
                <td>
                    @eproject.Id
                </td>
                <td>
                    @eproject.Employee.Name
                </td>
                <td>
                    @eproject.Project.Name
                </td>
                <td>
                    @eproject.Position.Name
                </td>
                <td>
                    @eproject.DateOfJoin
                </td>
                
                <td>
                    <a asp-page="Delete" asp-route-id="@eproject.Id" class="btn btn-danger">Delete information</a>
                </td>
            </tr>
        }
    </tbody>
</table>